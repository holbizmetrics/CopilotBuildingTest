<Window x:Class="VibeCoding.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:vm="clr-namespace:VibeCoding.UI.ViewModels"
        mc:Ignorable="d"
        Title="Vibe Coding" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Padding="5">
            <Button Content="Run" 
                    Command="{Binding RunCommand}"
                    Padding="10,3"
                    Margin="5,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="Clear Output" 
                    Command="{Binding ClearOutputCommand}"
                    Padding="10,3"
                    Margin="5,0"
                    Background="#FF9800"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Separator/>
            <Button Content="New Tab" 
                    Command="{Binding NewTabCommand}"
                    Padding="10,3"
                    Margin="5,0"
                    Cursor="Hand"/>
        </ToolBar>
        
        <!-- Tab Control for Editor -->
        <TabControl Grid.Row="1" 
                    ItemsSource="{Binding EditorTabs}"
                    SelectedItem="{Binding SelectedTab}"
                    Margin="5">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" Margin="0,0,10,0"/>
                        <Button Content="Ã—" 
                                Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="5,0"
                                Cursor="Hand"
                                ToolTip="Close Tab"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1">
                        <avalonEdit:TextEditor x:Name="textEditor"
                                               Document="{Binding Document}"
                                               SyntaxHighlighting="C#"
                                               FontFamily="Consolas"
                                               FontSize="12"
                                               ShowLineNumbers="True"
                                               LineNumbersForeground="#2196F3"
                                               Background="#FFFFFF"
                                               Foreground="#000000"/>
                    </Border>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        
        <!-- Splitter -->
        <GridSplitter Grid.Row="2" 
                      Height="5" 
                      HorizontalAlignment="Stretch" 
                      Background="#DDDDDD"
                      ResizeBehavior="PreviousAndNext"/>
        
        <!-- Output Console -->
        <GroupBox Grid.Row="3" Header="Output Console" Margin="5" Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox Text="{Binding OutputText, Mode=OneWay}"
                         IsReadOnly="True"
                         Background="#1E1E1E"
                         Foreground="#D4D4D4"
                         FontFamily="Consolas"
                         FontSize="11"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         BorderThickness="0"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
